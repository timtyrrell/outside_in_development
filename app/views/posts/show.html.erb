<%= flash[:notice] if flash[:notice] %>

<%= @post.title %>
<%= @post.body %>

<%= @post.comments.each do |comment| %>
  <%= comment.retort %>
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
  <%= f.label :retort %>
  <%= f.text_field :retort %>
  <%= f.button "Add Comment" %>
<% end %>
